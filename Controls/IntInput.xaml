<UserControl x:Class="FFmpegGUI.IntInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FFmpegGUI"
             mc:Ignorable="d" Height="34" Width="104">
    <Grid x:Name="Grid">
        <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" Padding="5, 0, 0, 0" TextWrapping="Wrap" Text="800" VerticalAlignment="Top" Width="82" Height="34"/>
        <Label Name="Unit" Margin="52,4,23,1" HorizontalContentAlignment="Center" />
        <Button Content="^" HorizontalAlignment="Left" Margin="82,0,0,0" VerticalAlignment="Top" Width="22" Height="17"/>
        <Button Content="^" HorizontalAlignment="Left" Margin="82,17,0,0" VerticalAlignment="Top" Width="22" Height="17" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Grid>
</UserControl>
